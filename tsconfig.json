{
  "compilerOptions": {
    /* ================================
     * ðŸ”¹ ECMAScript & Target Settings
     * ================================ */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",

    /* ================================
     * ðŸ”¹ React / JSX
     * ================================ */
    "jsx": "react-jsx",

    /* ================================
     * ðŸ”¹ Interop & Module Handling
     * ================================ */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* ================================
     * ðŸ”¹ Type Checking & Safety
     * ================================ */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    /* ================================
     * ðŸ”¹ JS Support & Decorators
     * ================================ */
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    /* ================================
     * ðŸ”¹ Emission Control
     * ================================ */
    "noEmit": true,

    /* ================================
     * ðŸ”¹ Type Definitions
     * ================================ */
    "types": [
      "node",
      "vite/client",
      "@types/google.maps"
    ],

    /* ================================
     * ðŸ”¹ Path Aliases
     * ================================ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  /* ================================
   * ðŸ”¹ Include & Exclude
   * ================================ */
  "include": [
    "src",
    "vite.config.ts",
    "server/**/*.ts",
    "types.d.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
